<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:padding="8dp"
    android:background="@drawable/background_manan"
    tools:context=".Buying_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BILL"
        android:textSize="30sp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price :"
                android:textSize="20sp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20sp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/card_num"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_credit_card_black_24dp"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:inputType="number"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateofexpiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="date of expiry"
                android:textSize="20sp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                />

            <EditText
                android:id="@+id/cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cvv"
                android:inputType="numberPassword"
                android:layout_weight="2"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="25dp" />


        <EditText
            android:id="@+id/holder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Holder Name"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_person"
            />


        <EditText
            android:id="@+id/email_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:inputType="text"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUy"
            android:background="@drawable/button"
            android:onClick="onbuyactivity"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>